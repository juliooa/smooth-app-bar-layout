<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="me.henrytao.smoothappbarlayoutdemo">

  <uses-permission android:name="com.android.vending.BILLING" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/app_name"
      android:name=".activity.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:label="@string/title_activity_info"
      android:name=".activity.InfoActivity" />
    <activity
      android:label="@string/title_activity_gsd_scroll"
      android:name=".activity.GsdScrollActivity" />
    <activity
      android:label="@string/title_activity_gsd_scroll_enter_always"
      android:name=".activity.GsdScrollEnterAlwaysActivity" />
    <activity
      android:label="@string/title_activity_gsd_scroll_enter_always_collapsed"
      android:name=".activity.GsdScrollEnterAlwaysCollapsedActivity" />
    <activity
      android:label="@string/title_activity_gsd_scroll_exit_until_collapsed"
      android:name=".activity.GsdScrollExitUntilCollapsedActivity" />
    <activity
      android:label="@string/title_activity_gsd_scroll_snap"
      android:name=".activity.GsdScrollSnapActivity" />
    <activity
      android:label="@string/title_activity_gsd_quick_return"
      android:name=".activity.GsdQuickReturnActivity" />
    <activity
      android:label="@string/title_activity_smooth_scroll"
      android:name=".activity.SmoothScrollActivity" />
    <activity
      android:label="@string/title_activity_smooth_scroll_enter_always"
      android:name=".activity.SmoothScrollEnterAlwaysActivity" />
    <activity
      android:label="@string/title_activity_smooth_scroll_enter_always_collapsed"
      android:name=".activity.SmoothScrollEnterAlwaysCollapsedActivity" />
    <activity
      android:label="@string/title_activity_smooth_scroll_exit_until_collapsed"
      android:name=".activity.SmoothScrollExitUntilCollapsedActivity" />
    <activity
      android:label="@string/title_activity_smooth_scroll_snap"
      android:name=".activity.SmoothScrollSnapActivity" />
    <activity
      android:label="@string/title_activity_smooth_scroll_exit_until_collapsed"
      android:name=".activity.SmoothQuickReturnActivity" />

    <!-- other examples -->
    <activity
      android:label="@string/title_activity_smooth_nested_scroll_view"
      android:name=".activity.SmoothNestedScrollViewActivity" />
    <activity
      android:label="@string/title_activity_smooth_custom_nested_scroll_view"
      android:name=".activity.SmoothCustomNestedScrollViewActivity" />
    <activity
      android:label="@string/title_activity_gsd_view_pager"
      android:name=".activity.GsdViewPagerActivity" />
    <activity
      android:label="@string/title_activity_smooth_view_pager"
      android:name=".activity.SmoothViewPagerActivity" />
    <activity
      android:label="@string/title_activity_smooth_view_pager_exit_until_collapsed"
      android:name=".activity.SmoothViewPagerExitUntilCollapsedActivity" />
    <activity
      android:label="@string/title_activity_smooth_view_pager_quick_return"
      android:name=".activity.SmoothViewPagerQuickReturnActivity" />
    <activity
        android:label="@string/title_activity_smooth_view_pager_custom_view"
        android:name=".activity.SmoothViewPagerCustomViewActivity" />
  </application>
</manifest>
